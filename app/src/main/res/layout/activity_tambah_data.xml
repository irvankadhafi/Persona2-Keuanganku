<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_tambah_data"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.kdhf.keuanganku.activity.TambahDataActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_income"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"
            android:hint="Pemasukan"/>

        <EditText
            android:id="@+id/et_outcome"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:inputType="numberSigned"
            android:layout_height="wrap_content"
            android:hint="Pengeluaran"/>

        <Button
            android:id="@+id/button_tambahdata"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="tambah data"/>
    </LinearLayout>
</RelativeLayout>